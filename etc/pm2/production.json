{

  /**
   * Declare the apps that are managed by PM2
   * https://github.com/Unitech/PM2/blob/master/ADVANCED_README.md#json-app-declaration
   */
  "apps": [
    {
      "name": "converjon",
      "script": "./node_modules/converjon/bin/converjon.js",
      "args": ["--config ./etc/converjon.yml", "--config ./etc/converjon/production.yml"],
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],

  /**
   * Deploy apps to server
   * https://github.com/Unitech/PM2/blob/master/ADVANCED_README.md#deployment-pm2--090
   */
  "deploy": {
    "production": {
      "user": "prlloyd",
      "host": "paulrobertlloyd.com",
      "ref": "origin/master",
      "repo": "git@github.com:paulrobertlloyd/images.paulrobertlloyd.com.git",
      "path": "/home/prlloyd/webapps/paulrobertlloyd_images",
      "post-deploy": "pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
